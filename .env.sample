# Application Configuration
# Base URL for the application
APPHOST=http://localhost:8080

# Server port
SERVER_ADDRESS=:8080

# Environment: development or production
ENV=development

# Application version
APP_VERSION=0.0.1

# API Key for authentication (required for protected endpoints)
API_KEY=api

# Content Delivery Network URL (optional)
CDN=

# JWT Configuration
JWT_SECRET=my_super_secret_key_123

# Swagger Configuration
SWAG_DISABLED=true

# Database Configuration
# Available drivers: sqlite, mysql, postgres
DB_DRIVER=sqlite

DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=XXX
DB_NAME=base
DB_PATH=storage/base.db

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
# Available levels: debug, info, warn, error
LOG_LEVEL=info

# Email Configuration
# Available providers: smtp, sendgrid, postmark
EMAIL_PROVIDER=postmark
EMAIL_FROM_ADDRESS=noreply@base.al
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Postmark Configuration (if using Postmark)
POSTMARK_SERVER_TOKEN=63b52305-b80e-4d4d-951c-xxx
POSTMARK_ACCOUNT_TOKEN=your_postmark_account_token

# Storage Configuration
# Available providers: local, s3, r2
STORAGE_PROVIDER=local

# Storage paths and URLs
STORAGE_PATH=storage/uploads
STORAGE_API_KEY=your_storage_api_key
STORAGE_API_SECRET=your_storage_api_secret
STORAGE_ENDPOINT=your_storage_endpoint
STORAGE_REGION=your_storage_region
STORAGE_BUCKET=your_storage_bucket
STORAGE_PUBLIC_URL=your_storage_public_url

# Storage limits and restrictions
# Maximum file size in bytes (default: 10MB)
STORAGE_MAX_SIZE=10485760

# Allowed file extensions
STORAGE_ALLOWED_EXT=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx